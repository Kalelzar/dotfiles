#!/bin/sh

# Ran when startx/xinit is ran.

#TODO: Transfer all of this to the StumpWM config.

mpd &		        # music player daemon-you might prefer it as a service though
rebindKeys &		# rebind Caps Lock to a more useful key
# setbg &			# set the background with the `setbg` script
# xcompmgr &		# xcompmgr for transparency
dunst &			# dunst for notifications
xset r rate 300 50 &	# Speed xrate up

pywalfox --daemon & # Pywal colors for firefox


xinput --set-prop "$(xinput \
                    | grep "Elantech" \
                    | sed -E 's$.*id=([0-9]+).*$\1$')" 299 1 &

unclutter &		# Remove mouse when idle

emacs --daemon &        # Start emacs in daemon mode

# Track activity
aw-server &
aw-watcher-window &
aw-watcher-afk &
