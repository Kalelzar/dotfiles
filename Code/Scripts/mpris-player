#!/bin/sh

allPlayers(){
    playerctl metadata -a -f "{{playerName}}"
}

isPlayer(){
    if allPlayers | grep "$1" -q
    then
        return 0
    else
        return 1
    fi
}

[ -f "$XDG_CACHE_HOME/mpris-player" ] && {
    active=$(mpris-status | grep '|Playing|' | cut -d'|' -f1)
    player="$(cat "$XDG_CACHE_HOME/mpris-player")"

    if [ -z "$active" ]
    then
        if isPlayer "$player"
        then
            echo "$player"
        else
            allPlayers
        fi
    else
        if echo "$active" | grep "$player" -q
        then
            echo "$player"
        else
            if [ -z "$active" ]
            then
                allPlayers
            else
                echo "$active"
            fi
        fi
    fi | head -1
    exit 0
}

allPlayers | head -1
