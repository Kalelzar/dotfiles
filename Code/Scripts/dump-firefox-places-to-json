#!/bin/bash

perl_expr='s/^([0-9]+)\|(.+?)\|(.*?)\|([-]?[0-9]+)$/{"visits": \1, "url": "\2", "title": "\3", "recency": \4}/'
limit=5000

grep -Ev '^(0|1|2|3|4)\|'   \
    | sort -n -r            \
    | head -"$limit"        \
    | tr $'\u0001''"' "#'"  \
    | sed 's/\\/\\\\/g'     \
    | perl -pe "$perl_expr" \
    | jq --slurp -c -M
